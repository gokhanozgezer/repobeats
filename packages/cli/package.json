{
  "name": "repobeats",
  "version": "0.1.4",
  "description": "Transform your git commits into music - CLI tool",
  "author": "Gokhan Ozgezer",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "bin": {
    "repobeats": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "git",
    "music",
    "midi",
    "commits",
    "sonification",
    "cli",
    "audio",
    "generative",
    "repobeats"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gokhanozgezer/repobeats"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "get-port": "^7.1.0",
    "midi-writer-js": "^2.1.4",
    "open": "^10.1.0",
    "ora": "^8.0.1",
    "simple-git": "^3.24.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repobeats/server": "workspace:*",
    "@repobeats/shared": "workspace:*",
    "@types/archiver": "^6.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
