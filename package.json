{
  "name": "repobeats-monorepo",
  "version": "0.1.5",
  "private": true,
  "description": "Transform your git commits into music",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter repobeats build",
    "build:server": "pnpm --filter @repobeats/server build",
    "build:ui": "pnpm --filter @repobeats/ui build",
    "build:shared": "pnpm --filter @repobeats/shared build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "repobeats": "pnpm --filter repobeats start"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
